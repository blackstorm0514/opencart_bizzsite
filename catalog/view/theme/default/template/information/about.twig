		<div class="container" style="    background-image: url(./image/catalog/images/mockup.jpg);
				    padding: 0;
				    margin-left: 0px;
				    margin-right: 0px;
				    width: 100%;">
			<h1 class="text-center" style="color:white; padding-top:25px; padding-bottom:25px;">STEL UW VRAAG</h1>

			<div class="col-sm-2"></div>
			<div class="col-sm-8">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal" style="border:1px solid white; background:white; margin-bottom:30px; padding:30px;">
					<fieldset>
						<div style="margin-right:0; margin-left:0;" class="form-group required col-sm-6">
							<label class="control-label" for="input-name" style="font-weight:bold; font-size:15px;">NAAM (VEREIST)</label>
								<input type="text" name="name" value="{{ name }}" id="input-name" class="form-control"/>
								{% if error_name %}
									<div class="text-danger">{{ error_name }}</div>
								{% endif %}
						</div>
						<div style="margin-right:0; margin-left:0;" class="form-group required col-sm-6">
							<label class="control-label" for="input-email" style="font-weight:bold; font-size:15px;">EMAIL (VEREIST)</label>
								<input type="text" name="email" value="{{ email }}" id="input-email" class="form-control"/>
								{% if error_email %}
									<div class="text-danger">{{ error_email }}</div>
								{% endif %}
						</div>
						<div style="margin-right:0; margin-left:0;" class="form-group required col-sm-12">
							<label class=" control-label" for="input-phone" style="font-weight:bold; font-size:15px;">TELEFOONNUMMER (VEREIST)</label>
								<input type="text" name="phone" value="" id="input-phone" class="form-control"/>
						</div>
						<div style="margin-right:0; margin-left:0;" class="form-group required col-sm-12">
							<label class=" control-label" for="input-topic" style="font-weight:bold; font-size:15px;">ONDERWERP</label>
								<input type="text" name="topic" value="" id="input-topic" class="form-control"/>
						</div>
						<div style="margin-right:0; margin-left:0;" class="form-group required col-sm-12">
							<label class=" control-label" for="input-enquiry" style="font-weight:bold; font-size:15px;">BERICHT</label>
								<textarea name="enquiry" rows="10" id="input-enquiry" class="form-control">{{ enquiry }}</textarea>
								{% if error_enquiry %}
									<div class="text-danger">{{ error_enquiry }}</div>
								{% endif %}
						</div>
						<div style="margin-right:0; margin-left:0;" class="form-group required col-sm-12">
								{{ captcha }}
						</div>
						<div class="buttons" style="margin-bottom:15px; padding-right:5px;">
							<div class="pull-right">
								<input class="btn" style="background-color: #28343d; border-color: #28343d; color:white; font-weight:bold; font-size:15px;" type="submit" value="Verzenden"/>
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>
		{{ footer }}
